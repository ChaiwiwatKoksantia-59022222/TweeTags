<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.plutos_seup.tweetags.MainActivity"
    android:theme="@style/Login"
    android:background="@color/bg_light"
    tools:showIn="@layout/activity_main">

    <android.support.v7.widget.RecyclerView

        android:paddingBottom="10dp"
        android:paddingTop="8dp"
        android:clipToPadding="false"
        android:visibility="visible"
        android:id="@+id/main_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    </android.support.v7.widget.RecyclerView>

    <LinearLayout
        android:orientation="vertical"
        android:background="@color/colorPrimary"
        android:visibility="visible"
        android:id="@+id/main_menu_drawer_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="My profile"
            android:textSize="18dp"
            android:padding="15dp"
            android:fontFamily="sans-serif-light"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#5dffffff"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Theme"
                android:textSize="18dp"
                android:padding="15dp"
                android:fontFamily="sans-serif-light"
                />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:layout_height="wrap_content">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:padding="5dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_square_shape_shadow"
                    app:civ_border_width="2dp"
                    app:civ_border_color="#FFFFFFFF"
                    />
                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:padding="5dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_square_shape_shadow_2"
                    app:civ_border_width="2dp"
                    app:civ_border_color="#FFFFFFFF"
                    />
                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:padding="5dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_square_shape_shadow_3"
                    app:civ_border_width="2dp"
                    app:civ_border_color="#FFFFFFFF"
                    />
                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:padding="5dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_square_shape_shadow_4"
                    app:civ_border_width="2dp"
                    app:civ_border_color="#FFFFFFFF"
                    />
                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:padding="5dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_square_shape_shadow_5"
                    app:civ_border_width="2dp"
                    app:civ_border_color="#FFFFFFFF"
                    />
                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:padding="5dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_square_shape_shadow_6"
                    app:civ_border_width="2dp"
                    app:civ_border_color="#FFFFFFFF"
                    />
            </LinearLayout>

        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#5dffffff"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Favorites"
            android:textSize="18dp"
            android:padding="15dp"
            android:fontFamily="sans-serif-light"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#5dffffff"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Settings"
            android:textSize="18dp"
            android:fontFamily="sans-serif-light"
            android:padding="15dp"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#5dffffff"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            />
        <TextView
            android:id="@+id/main_sign_out"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sign out"
            android:textSize="18dp"
            android:padding="15dp"
            android:fontFamily="sans-serif-light"
            />

    </LinearLayout>



</RelativeLayout>
