<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <RelativeLayout
        android:background="#c6f4f4f4"
        android:layout_width="match_parent"
        android:visibility="visible"
        android:id="@+id/edit_hashtag_delete_confirm"
        android:layout_height="212dp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:background="#FFFFFF"
            android:layout_height="15dp">

            <RelativeLayout
                android:layout_width="20dp"
                android:layout_height="5dp"
                android:background="#e4e4e4"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                ></RelativeLayout>


        </RelativeLayout>

        <LinearLayout
            android:layout_marginTop="32dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_height="60dp"
                android:layout_marginRight="20dp"
                app:cardCornerRadius="30dp"
                app:cardElevation="0dp"
                android:id="@+id/card_bts_edit_delete_confirm"
                app:cardBackgroundColor="#fd1f1f"
                android:clickable="true"
                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:background="?attr/selectableItemBackground"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_height="70dp"
                        android:text="CONFIRM TO DELETE"
                        android:textColor="#FFFFFF"
                        android:layout_width="wrap_content"
                        android:paddingRight="0dp"
                        android:layout_centerHorizontal="true"
                        android:gravity="center_vertical"
                        android:drawablePadding="20dp"
                        />

                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <RelativeLayout
                android:background="#e4e4e4"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_width="match_parent"
                android:layout_marginTop="20dp"
                android:layout_height="2dp">



            </RelativeLayout>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:clickable="true"
                android:layout_marginLeft="20dp"
                android:layout_height="60dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                app:cardCornerRadius="30dp"
                app:cardElevation="0dp"
                android:id="@+id/card_bts_edit_delete_cancel"
                >

                <RelativeLayout
                    android:background="?attr/selectableItemBackground"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:paddingRight="0dp"
                        android:layout_centerHorizontal="true"
                        android:layout_height="70dp"
                        android:text="CANCEL"
                        android:drawablePadding="20dp"
                        android:gravity="center_vertical"

                        />

                </RelativeLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>